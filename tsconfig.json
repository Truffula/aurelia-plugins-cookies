{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "listFiles": true,
    "module": "es2015",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "stripInternal": true,
    "target": "es2015"
  },
  "exclude": [
    "dist",
    "gulpfile.js",
    "node_modules"
  ]
}
